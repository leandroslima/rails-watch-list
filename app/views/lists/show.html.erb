<h1><%= @list.name %></h1>

<%= link_to "Add a Movie", new_list_bookmark_path(@list), class: 'btn btn-primary' %>

<% @bookmarks.each do |bookmark| %>
  <p><%= bookmark.movie.title %></p>
  <p><%= bookmark.movie.overview %></p>
  <p><%= image_tag bookmark.movie.poster_url, alt: bookmark.movie.title, class: "movie-img rounded-top" %></p>
<% end %>
