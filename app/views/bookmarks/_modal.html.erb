<div class="modal fade" id="new_movie_modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add a movie to the <%= @list.name %> list</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <%= simple_form_for [@list, @new_bookmark] do |f| %>
        <div class="modal-body">
          <%= f.association :movie, collection: Movie.select('min(id) as id, title').group(:title).order(:title), prompt: "Select a movie" %>
          <%= f.input :comment, placeholder: "Enter a comment about the movie" %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <%= f.submit 'Save changes', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
